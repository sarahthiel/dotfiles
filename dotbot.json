[
    {
        "defaults": {
            "link": {
                "relink": true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"],
            ["mkdir -p ~/.bash/vendor", "create folder for zsh plugins"]
        ]
    },
    {
        "link": {
            "~/.bin": "bin",
            "~/.bashrc": "bash/bashrc",
            "~/.bash_profile": "bash/profile",
            "~/.bash/vendor/sthprompt.bash": "vendor/sebastianthiel/prompt/sthprompt.bash",
            "~/.dircolors": "vendor/sebastianthiel/prompt/sthprompt.lscolors",
            "~/.bash/shell.sh": "shell/bash.sh",
            "~/.bash/git.sh": "git/bash.sh",
            "~/.ggitignore": "git/ggitignore",
            "~/.gitconfig": "git/gitconfig",
            "~/.vimrc": "vim/vimrc",
            "~/.vim": "vim/vim",
            "~/.vim/bundle/Vundle.vim": "vendor/VundleVim/Vundle.vim",
            "~/.bash/vim.sh": "vim/bash.sh",
            "~/.curlrc": "curl/curlrc"
        }
    },
    {
        "shell": [
            ["vim +PluginInstall +qall", "Installing vim plugins"]
        ]
    }
]
